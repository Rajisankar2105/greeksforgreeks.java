
class Solution {
    static void rotateArr(int arr[], int d) {
        int n=arr.length;
        d=d%n;
        rev(arr,d,n-1);
        rev(arr,0,d-1);
        rev(arr,0,n-1);
    }
    static void rev(int arr[],int l,int r){
        while(l<r){
            int temp=arr[l];
            arr[l]=arr[r];
            arr[r]=temp;
            l++;
            r--;
        }
    }
}
